<!-- Main Content goes here -->
<div class="container">
    <div class="row" id="main">
        <div class="col-lg-12" id="scrape-content">
            
            {{#each articles}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>{{this.title}}</h2>
                    <button class="btn-success btn btn-save" data-id="{{this._id}}" data-click="false">Save Article</button>
                </div>
                <div class="panel-body">
                    <p>{{this.summary}}
                        <br>
                        <a href="{{this.link}}">Link</a>
                    </p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>